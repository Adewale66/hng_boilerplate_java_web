[Unit]
Description=Java Boilerplate Development
After=network.target

[Service]
User=teamjava
Group=teamjava
WorkingDirectory=/home/teamjava/hng_boilerplate_java_web
ExecStart=/usr/bin/java -jar /home/teamjava/hng_boilerplate_java_web/target/hng-java-boilerplate-0.0.1-SNAPSHOT.jar --spring.profiles.active=dev

# System-level Controls     
CPUQuota=40%
TasksMax=512
MemoryLimit=512M
LimitNPROC=512
LimitNOFILE=1024

[Install]
WantedBy=multi-user.target
